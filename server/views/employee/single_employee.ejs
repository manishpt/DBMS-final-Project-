<%- include("../partials/header") %>
    <div class = "container d-grid gap-2 col-10 mx-auto">
        <% if(employee){ %>
            <div class="card" style="width: 45rem; display: inline-block;">
                <div class="card-header" style="font-size:xx-large; color: white; background-color: #636d75;">Employee ID: <%=employee['emp_id']%></div>
                <div class="card-body">
                    <h4 class="card-title">First Name: <%=employee['first_name']%></h4>
                    <%if(employee['middle_name']){%>
                        <h4 class="card-title">Middle Name: <%=employee['middle_name']%></h4>
                    <%}%>
                    <h4 class="card-title">Last Name: <%=employee['last_name']%></h4>
                    <h4 class="card-title">Email: <%=employee['email']%></h4>
                    <h4 class="card-title">Phone Number: <%=employee['phone_number']%></h4>
                    <h4 class="card-title">Gender: <%=employee['gender']%></h4>
                    <h4 class="card-title">Date of Birth: <%=employee['emp_dob']%></h4>
                    <h4 class="card-title">Date of Joining: <%=employee['emp_doj']%></h4>
                    <h4 class="card-title">Department ID: <%=employee['d_id']%></h4>
                    <h4 class="card-title">Address: <%=employee['emp_address']%></h4>
                    <h4 class="card-title">Works On Projects:</h4>
                    <div class="card" style="width: 30rem; display: inline-block;">
                        <div class="card-body">
                            <% if(projects){ %>
                                <% projects.forEach(project=>{ %>
                                    <a href="/projects/<%=project['p_id']%>" type="button" class="btn btn-outline-primary">Project ID: <%=project['p_id']%></a>
                                <%});%>
                            <%}else{%>
                                <h3 class="card-title">None</h3>
                            <%}%>
                        </div>
                    </div>
                    <br>
                    <br>
                    <% if(dependents){ %>
                        <% dependents.forEach(dependent=>{ %>
                            <div class="card" style="width: 30rem; display: inline-block;">
                                <div class="card-body">
                                    <h5 class="card-title">Dependent Name: <%=dependent['dependent_name']%></h5>
                                </div>
                            </div>    
                        <%});%>
                    <%}else{%>
                        <h1>No Dependents</h1>
                    <%}%>  
                </div>
            </div>
            <div class="container" style="width: 30rem; display: inline-block;">
                <% if(pay_roll){ %>
                    <div class="card" style="width: 30rem; display: inline-block;">
                        <div class="card-header" style="font-size:xx-large; color: white; background-color: #636d75;">Pay Roll</div>
                        <div class="card-body">
                            <h4 class="card-title">Salary Per Month: <%=pay_roll['sal_per_month']%></h4>
                            <h4 class="card-title">Salary Per Annum: <%=pay_roll['sal_per_annum']%></h4>
                            <h4 class="card-title">Transaction_ID: <%=pay_roll['transaction_id']%></h4>
                        </div>
                    </div>
                <%}else{%>
                    <div class="card" style="width: 60rem; display: inline-block;">No Pay Roll</div>
                <%}%>
                <% if(pay_grade){ %>
                    <div class="card" style="width: 30rem; display: inline-block;">
                        <div class="card-header" style="font-size:xx-large; color: white; background-color: #636d75;">Pay Grade</div>
                        <div class="card-body">
                            <h4 class="card-title">Base Salary: <%=pay_grade['base_sal']%></h4>
                            <h4 class="card-title">Grade TA: <%=pay_grade['grade_ta']%></h4>
                            <h4 class="card-title">Grade DA: <%=pay_grade['grade_da']%></h4>
                            <h4 class="card-title">Grade PF: <%=pay_grade['grade_pf']%></h4>
                            <h4 class="card-title">Grade MA: <%=pay_grade['grade_ma']%></h4>
                        </div>
                    </div>
                <%}else{%>
                    <div class="card" style="width: 60rem; display: inline-block;">No Pay Roll</div>
                <%}%>
            </div>
            
        <%}else{%>
            <h1>No Employee with this ID</h1>
        <%}%>
    </div>
<%- include("../partials/footer") %> 